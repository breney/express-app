extends ../layout
block content
    .row.justify-content-center
        .col-5
            form(action='/api/customers/' method='POST')
                h5 Book #{name}
                .form-group
                    label(for='name') Name
                    input#name.form-control(type='text' name="name")
                .form-group
                    label(for='address') Address
                    input#address.form-control(type='text' name="address")
                .form-group
                    label(for='phone') Phone
                    input#phone.form-control(type='text' name="phone")
                .form-group
                    label(for='age') Age
                    input#age.form-control(type='text' name="age")

                button.btn.btn-danger.m-1() Create
                a.btn.btn-primary(type='button' href='/') Voltar