extends ../layout

block content
    .row.justify-content-center
        .col-5
            form
                h5 Customer #{name}
                .form-group
                    label(for='name') Name
                    input#name.form-control(type='text' value=name)
                .form-group
                    label(for='address') Address
                    input#address.form-control(type='text' value=address)
                .form-group
                    label(for='phone') Phone
                    input#phone.form-control(type='text' value=phone)
                .form-group
                    label(for='age') Age
                    input#age.form-control(type='text' value=age)

                button.btn.btn-success(type='submit') Edit
                a.btn.btn-danger.m-1(type='button' href='/customers/') Voltar



