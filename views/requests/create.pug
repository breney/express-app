extends ../layout

block content
    .row.justify-content-center
        .col-5
            form(action='/api/books/' method='POST')
                h5 Book #{name}
                .form-group
                    label(for='name') Name
                    input#name.form-control(type='text' name="address")
                .form-group
                    label(for='address') Address
                    input#address.form-control(type='text' name="address")
                .form-group
                    label(for='phone') Phone
                    input#phone.form-control(type='text' name="phone")
                .form-group
                    label(for='author') Choose a Book:
                    br
                    select.form-control#author(name='author')
                        each book in books
                            option(value=book.id)= book.name
                button.btn.btn-danger.m-1() Create
                a.btn.btn-primary(type='button' href='/') Voltar